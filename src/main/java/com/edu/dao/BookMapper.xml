<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu.dao.BookMapper">

    <!--增加一个Book-->
    <insert id="addBook" parameterType="Books">
        insert into ssmbuild.books(bookName,bookCounts,bookType,bookKeyword,detail)
        values (#{bookName}, #{bookCounts},#{bookType},#{bookKeyword}, #{detail})
    </insert>

    <!--根据id删除一个Book-->
    <delete id="deleteBookById" parameterType="int">
        delete from ssmbuild.books where bookId=#{bookId}
    </delete>

    <!--更新Book-->
    <update id="updateBook" parameterType="Books">
        update ssmbuild.books
        set bookName = #{bookName},bookCounts = #{bookCounts},bookType=#{bookType},bookKeyword=#{bookKeyword},detail = #{detail}
        where bookId = #{bookId}
    </update>

    <!--更新BookCounts-->
    <update id="updateBookCounts" parameterType="int">
        update ssmbuild.books
        set bookCounts = #{bookCounts}
        where bookId = #{bookId}
    </update>

    <!--根据id查询,返回一个Book-->
    <select id="queryBookById" resultType="Books">
        select * from ssmbuild.books
        where bookId = #{bookId}
    </select>

    <!--查询全部Book-->
    <select id="queryAllBook" resultType="Books">
        SELECT * from ssmbuild.books
    </select>

    <select id="queryBookByName" resultType="Books">
        SELECT * FROM ssmbuild.books
        WHERE bookName like '%${bookName}%'
    </select>

    <select id="queryBook" resultType="Books">
          SELECT * FROM ssmbuild.books
          <where>
              <if test='bookId!="all" and bookId!=""'>
                bookId like '%${bookId}%'
              </if>
              <if test='bookName!=""'>
                  bookName like '%${bookName}%'
              </if>
              <if test='bookType!=""'>
                  bookType like '%${bookType}%'
              </if>
              <if test='bookKeyword!=""'>
                  bookKeyword like '%${bookKeyword}%'
              </if>
              <if test='detail!="" and bookId==""'>
                  detail like '%${detail}%'
              </if>
              <if test='bookId=="all" and bookName=="" and bookType=="" and bookKeyword=="" and detail!=""'>
                  bookId like '%${detail}%' or bookName like '%${detail}%' or bookType like '%${detail}%' or bookKeyword like '%${detail}%'
                  or detail like '%${detail}%'
              </if>
          </where>
    </select>

</mapper>