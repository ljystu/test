<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu.dao.AdminMapper">

    <resultMap id="BaseResultMap" type="com.edu.pojo.Admin" >
        <id column="adminId" property="adminId" jdbcType="INTEGER" />
        <result column="adminName" property="adminName" jdbcType="VARCHAR" />
        <result column="adminPwd" property="adminPwd" jdbcType="VARCHAR" />
    </resultMap>

    <select id="loginAdmin" resultMap="BaseResultMap" parameterType="Admin">
        select * from ssmbuild.admin
        where adminName = #{adminName} and adminPwd = #{adminPwd}
    </select>

    <select id="getPassword" resultType="String" parameterType="int">
        select adminPwd from ssmbuild.admin where adminId = #{adminId}
    </select>

    <update id="resetPassword">
        update ssmbuild.admin set adminPwd = #{adminPwd}
        where adminId = #{adminId}
    </update>

    <select id="findIdByName" resultType="int" parameterType="String">
        select adminId from ssmbuild.admin where adminName = #{adminName}
    </select>
</mapper>